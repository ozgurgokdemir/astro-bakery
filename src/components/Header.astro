---
import { Icon } from 'astro-icon/components';
import Logo from '@/components/Logo.astro';
import NavLink from '@/components/NavLink.astro';
import Button from '@/components/Button.astro';
---

<header class="container flex items-center justify-between py-8 lg:py-12">
  <Logo />
  <nav aria-label="main" class="hidden items-center gap-12 lg:flex">
    <NavLink href="">Home</NavLink>
    <NavLink href="">Menu</NavLink>
    <NavLink href="">About</NavLink>
    <Button size="medium" asChild>
      {
        (className: string) => (
          <a href="" class={className}>
            <span>Contact</span>
            <Icon name="heroicons:arrow-long-right-20-solid" class="h-5 w-5" />
          </a>
        )
      }
    </Button>
  </nav>
  <button type="button" class="inline-block lg:hidden">
    <Icon name="heroicons:bars-3-20-solid" class="h-6 w-6" />
  </button>
</header>
