---
import type { HTMLAttributes } from 'astro/types';
import { cx } from 'class-variance-authority';

type Props = HTMLAttributes<'input'> & {
  id: string;
  label: string;
};

const {
  id,
  label,
  type = 'text',
  required = true,
  class: className,
  ...props
} = Astro.props;
---

<div class="flex flex-col gap-2">
  <label for={id} class="font-primary text-heading-xl font-bold text-brand">
    {label}
  </label>
  <input
    {id}
    name={id}
    {type}
    {required}
    class={cx(
      'focus-visible:border-brand-hover ring-brand-hover h-14 rounded-md border border-primary bg-surface px-3 font-secondary text-body-md font-regular text placeholder:text-secondary/50 focus-visible:outline-none focus-visible:ring-1',
      className,
    )}
    {...props}
  />
</div>
