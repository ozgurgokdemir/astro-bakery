---
import type { HTMLAttributes } from 'astro/types';
import { cx } from 'class-variance-authority';

type Props = HTMLAttributes<'div'> & {
  heading: string;
  subheading: string;
};

const { heading, subheading, class: className, ...props } = Astro.props;
---

<div
  class={cx('container mt-8 lg:mt-12 space-y-4 lg:text-center', className)}
  {...props}
>
  <h1 class="font-primary font-bold text-neutral text-[1.75rem] lg:text-[3rem]">
    {heading}
  </h1>
  <p
    class="font-secondary text-neutral/60 text-[1rem] lg:text-[1.125rem] leading-relaxed"
  >
    {subheading}
  </p>
</div>
