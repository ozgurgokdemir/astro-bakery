---
import menuList from '@/data/menu-list';
import MainLayout from '@/layouts/MainLayout.astro';
import PageHeader from '@/components/PageHeader.astro';
import MenuItemCard from '@/components/MenuItemCard.astro';
---

<MainLayout>
  <section>
    <PageHeader
      heading="Delightful Menu Selections"
      subheading="Explore the flavors and experiences that await you at Sweet Delights Bakery."
    />
    <div class="container py-16 lg:py-24 space-y-12">
      {
        menuList.map(({ category, items }) => (
          <div class="space-y-6 lg:space-y-8">
            <h2 class="font-primary font-bold text-neutral text-[1.5rem]">
              {category}
            </h2>
            <div class="flex flex-col lg:flex-row gap-6 lg:gap-8">
              {items.map(({ image, title }) => (
                <MenuItemCard {image} {title} class="flex-1" />
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </section>
</MainLayout>
